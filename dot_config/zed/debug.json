// Some example tasks for common languages.
//
// For more documentation on how to configure debug tasks,
// see: https://zed.dev/docs/debugger
[
  {
    "label": "SwiftDebug",
    "adapter": "Swift",
    "request": "launch",
    // This says we want xcede to manage the process.
    // You could pass the path to an executable here, and that
    // would just launch lldb on that executable, as if you
    // weren't using xcede.
    "program": "xcede:",

    // This will build your app first, and is optional.
    // Or, you can instead refer to an existing task that
    // you've defined, like this:
    // "build": "SwiftBuild"
    "build": {
      "command": "xcede build"
    }
  },
  {
    "label": "Debug active Python file",
    "adapter": "Debugpy",
    "program": "$ZED_FILE",
    "request": "launch",
    "cwd": "$ZED_WORKTREE_ROOT"
  },
  {
    "label": "Debug active JavaScript file",
    "adapter": "JavaScript",
    "program": "$ZED_FILE",
    "request": "launch",
    "cwd": "$ZED_WORKTREE_ROOT",
    "type": "pwa-node"
  },
  {
    "label": "JavaScript debug terminal",
    "adapter": "JavaScript",
    "request": "launch",
    "cwd": "$ZED_WORKTREE_ROOT",
    "console": "integratedTerminal",
    "type": "pwa-node"
  }
]
