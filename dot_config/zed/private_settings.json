// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "tabs": {
    "git_status": true,
    "close_position": "right",
    "show_close_button": "hover",
    "file_icons": true,
    "show_diagnostics": "errors"
  },
  "file_finder": {
    "modal_max_width": "small"
  },
  "extend_comment_on_newline": true,
  "icon_theme": "VSCode Great Icons Theme",
  "agent": {
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4-5"
    },
    "model_parameters": []
  },
  "context_servers": {
    "sosumi": {
      "source": "custom",
      "enabled": true,
      "command": "npx",
      "args": ["-y", "mcp-remote", "https://sosumi.ai/mcp"]
    },
    "hatch-mcp": {
      "source": "custom",
      "enabled": true,
      "command": "npx",
      "args": ["-y", "@swiftedmind/hatch-mcp@latest", "--allow", "xcodebuild"],
      "env": {}
    }
  },
  "outline_panel": {
    "folder_icons": true
  },
  "project_panel": {
    "default_width": 300,
    "indent_size": 12.0
  },
  "preview_tabs": {
    "enabled": true
  },
  "agent_ui_font_size": 17.0,
  "languages": {
    "Markdown": {
      "show_completions_on_input": false,
      "completions": {
        "lsp": false,
        "words": "disabled"
      }
    },
    "Swift": {
      "show_completions_on_input": true,
      "completions": {
        "lsp": true,
        "words": "fallback",
        "words_min_length": 1
      },
      "tab_size": 2,
      "hard_tabs": false,
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "swiftformat",
          "arguments": [
            "stdin",
            "--stdinpath",
            "{buffer_path}",
            "--config",
            ".swiftformat"
          ]
        }
      }
    }
  },
  "soft_wrap": "editor_width",
  "show_whitespaces": "all",
  "agent_buffer_font_size": 17.0,
  "ui_font_family": ".ZedSans",
  "buffer_font_family": "JetBrainsMono Nerd Font Mono",
  "theme": "Xcode Default Darker",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "diagnostics": {
    "include_warnings": true,
    "inline": {
      "enabled": true
    }
  },
  "auto_signature_help": true,
  "edit_predictions": {
    "mode": "subtle",
    "enabled_in_text_threads": true
  },
  "show_edit_predictions": true,
  "minimap": {
    "show": "never"
  },
  "inlay_hints": {
    "enabled": false
  },
  "wrap_guides": [120],
  "vim_mode": true,
  "base_keymap": "VSCode",
  "buffer_font_size": 17.0,
  "dap": {
    "Swift": {
      "binary": "/usr/local/bin/xcede"
    }
  }
}
